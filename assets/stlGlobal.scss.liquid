$basicOpacityTransition: 'opacity .3s ease-in-out';
@mixin prefix($property, $value) {
    -webkit-#{$property}: #{$value};
    -moz-#{$property}: #{$value};
    -ms-#{$property}: #{$value};
    -o-#{$property}: #{$value};
    #{$property}: #{$value};
}
@mixin transition($transition: 0.1s all) {
    @include prefix('transition', #{$transition});
}

html,
body {
    margin: 0;
    padding: 0;
    background-color: lightgrey;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: #000;
}

p,
ul,
ol,
h1,
h2,
h3,
h4,
h5,
h6 {
    margin: 0;
    padding: 0;
    text-rendering: optimizeLegibility;
}

a {
    color: inherit;
    opacity: 1;
    @include transition($basicOpacityTransition);
    &:hover {
        opacity: .6;
        @include transition($basicOpacityTransition);
    }
    &:active,
    &:focus,
    &:visited {
        color: inherit;
    }
}

[tabindex="-1"]:focus {
    outline: none;
}

.visHid {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
    white-space: nowrap;
    &.ablFoc {
        &:active,
        &:focus {
            clip: auto;
            height: auto;
            margin: 0;
            overflow: visible;
            position: static;
            width: auto;
            white-space: inherit;
        }
    }
    &.skpLnk {
        background-color: #fff;
        padding: 1em;
        z-index: 10000;
    }
}
